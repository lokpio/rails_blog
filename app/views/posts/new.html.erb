<h1>New post</h1>
<%= form_for :post, url: posts_path do |f| %>
<% if @post.errors.any? %>
<h2><%= pluralize(@post.errors.count,"error") %></h2>
<% @post.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<% end %>
<% end %>
<p>
	<%= f.label :title %>:<br>
	<%= f.text_field :title %>
</p>

<p>
	<%= f.label :body %>:<br>
	<%= f.text_area :body %>
</p>

<p><%= f.submit %></p>
<% end %>